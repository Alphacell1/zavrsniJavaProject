<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.MenuItem?>

<AnchorPane style="-fx-background-color: #DEEFF5;" prefHeight="28.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.IzbornikController">
    <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <menus>
            <Menu text="Pregled svih revizija">
                <items>
                    <MenuItem text="Open All Revisions" onAction="#openPregledSvihRevizija"/>
                </items>
            </Menu>
            <Menu text="Pregled lokalnih revizija">
                <items>
                    <MenuItem text="Open Local Revisions" onAction="#openPregledLokalnihRevizija"/>
                </items>
            </Menu>
            <Menu text="Dodavanje revizija">
                <items>
                    <MenuItem text="Add Revisions" onAction="#openDodavanjeRevizija"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Konzola">
                <items>
                    <MenuItem mnemonicParsing="false" fx:id="konzola" text="Open Console" onAction="#openKonzola"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Odlogiraj">
                <items>
                    <MenuItem mnemonicParsing="false" fx:id="odlogiraj" text="Odlogiraj se" onAction="#odlogiraj"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
</AnchorPane>
